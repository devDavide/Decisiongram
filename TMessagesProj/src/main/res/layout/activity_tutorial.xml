<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a5000000"
    tools:context="com.example.davide.testproject.TutorialActivity">

    <TextView
        android:paddingTop="10dp"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:text="@string/tutorialString"
        android:id="@+id/tutorial_tv_info"
        android:layout_below="@+id/tutorial_iv_arrow_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gotIt"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:background="@drawable/button_enabled"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tutorial_btn_got_it"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:layout_below="@+id/tutorial_tv_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorial_iv_arrow_up"
        android:background="@drawable/arrow_up"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tutorial_btn_got_it"
        android:layout_alignStart="@+id/tutorial_btn_got_it" />

</RelativeLayout>
